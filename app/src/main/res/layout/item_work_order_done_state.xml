<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/reviewWarning_topDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/general_horizontal_margin"
            android:layout_marginEnd="@dimen/general_horizontal_margin"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/providerRatingInfo_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Cierre de Orden"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewWarning1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:text="En este punto tu proveedor ha indicado que finalizo el trabajo, por favor verifica que el trabajo haya sido realizado segun los requerimientos y deja una reseña. " />

        <TextView
            android:id="@+id/reviewWarning2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:text="Si hay fallas evidentes, no dudes en rechazar la orden para que el proveedor revise el trabajo y corrija." />

        <TextView
            android:id="@+id/reviewWarning3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:text="No te preocupes, si aceptas y encuentras fallas mas tarde, tienes tiempo hasta dd/mm/yyyy hh:mm hs para como garantia luego de cerrada la orden." />

        <TextView
            android:id="@+id/reviewWarning4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:text="Tienes tiempo hasta el dd/mm/yyyy hh:mmhs, luego de esta fecha la orden se cerrara, se liberara el pago al proveedor y no podras iniciar reclamos por fallas." />

        <View
            android:id="@+id/providerRating_topDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/general_horizontal_margin"
            android:layout_marginEnd="@dimen/general_horizontal_margin"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/providerRating_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Califica a tu Trabajador"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/providerAppereance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Presentacion personal" />

            <RatingBar
                android:id="@+id/providerAppereance_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminateOnly="false"
                android:isIndicator="false"
                android:max="5"
                android:mirrorForRtl="true"
                android:progress="1"
                android:stepSize="1" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/providerCleanliness_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Limpieza del trabajo" />

            <RatingBar
                android:id="@+id/providerCleanliness_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:isIndicator="false"
                android:max="5"
                android:progress="1"
                android:stepSize="1" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/providerSpeed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Calidad del trabajo" />

            <RatingBar
                android:id="@+id/providerSpeed_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:isIndicator="false"
                android:max="5"
                android:progress="1"
                android:stepSize="1" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/providerQualityScore_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Velocidad del trabajo" />

            <RatingBar
                android:id="@+id/providerQualityScore_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:isIndicator="false"
                android:max="5"
                android:progress="1"
                android:stepSize="1" />

        </TableRow>
        <View
            android:id="@+id/providerRating_bottomDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/general_horizontal_margin"
            android:layout_marginEnd="@dimen/general_horizontal_margin"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/providerReview_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Comenta como fue tu experiencia"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DescriptionSimpleTextInputLayout"
            style="@style/CustomShapeAppearanceFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="14dp"
            app:boxBackgroundMode="none"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:endIconMode="clear_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/providerReview_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLength="200"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:singleLine="true"
                android:hint="Reseña"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/acceptWorkOrder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aceptar" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/rejectWorkOrder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="rechazar" />
        </LinearLayout>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>