<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meetDate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Finalizacion" />

            <TextView
                android:id="@+id/meetDate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meetTime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo de Materiales" />

            <TextView
                android:id="@+id/meetTariff_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1000sat"
                android:inputType="number"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meetTariff_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo de Mano de Obra" />

            <TextView
                android:id="@+id/meetTariff_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1000sat"
                android:inputType="number"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/invoice_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tareas a realizar" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/description_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="5"
                android:maxLength="200" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/invoice_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice de pago" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Copiar invoice" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/description_value3"
                style="@style/CustomShapeAppearanceFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="5"
                android:maxLength="200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/acceptWorkOrder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aceptar" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/rejectWorkOrder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="rechazar" />
        </LinearLayout>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>